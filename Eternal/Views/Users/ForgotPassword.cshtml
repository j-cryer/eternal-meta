@{
    ViewData["Title"] = "Forgot Password";
}

<div class="jumbotron col-md-10 col-xs-12 col-md-offset-1">
    <div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
        <div class="panel panel-default">

            <div class="panel-heading" style="font-size:large;">Forgot Password</div>

            <div class="panel-body">

                @if (ViewData["PasswordResetMessage"] != null)
                {
                    <div class="alert alert-success">@ViewData["PasswordResetMessage"]</div>
                }

                <form asp-action="ForgotPassword">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <div class="col-md-12 col-xs-12">
                                <label>Email</label>
                                <input class="form-control" name="email" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 col-xs-12">
                                <input type="submit" value="Send Reset Email" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}